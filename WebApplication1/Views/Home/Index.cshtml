@model IEnumerable<TOOP.Models.Insurance>

@{ 
    ViewBag.Title = "Insurances";
}

<div class="insurances--container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>@Resources.Resources.Actions</th>
        </tr>
    
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink(Resources.Resources.Details, "Details", new { item.Id })
                </td>
            </tr>
        }
    
    </table>
</div>